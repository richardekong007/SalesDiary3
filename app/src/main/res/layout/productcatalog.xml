<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background">

        <SearchView android:id="@+id/search"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="#fff"
            />
        <TextView
            android:id="@+id/textlab0"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="0.5dp"
            android:layout_below="@+id/search"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000"
            android:text="ID"/>
        <TextView
            android:id="@+id/textlab1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/textlab0"
            android:layout_below="@+id/search"
            android:padding="5dp"
            android:textSize="15dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="PRODUCT"/>
        <TextView
            android:id="@+id/textlab5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:layout_below="@+id/search"
            android:layout_toRightOf="@+id/textlab1"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="IMAGE"
            />
        <TextView
            android:id="@+id/textlab2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:padding="5dp"
            android:layout_toRightOf="@+id/textlab5"
            android:layout_below="@+id/search"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="PRICE"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/textlab3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:layout_below="@+id/search"
            android:layout_toRightOf="@+id/textlab2"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="STOCK"/>
    <LinearLayout
        android:id="@+id/listHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textlab3">
        <ListView
            android:id="@+id/listLayout"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textlab3"
            android:layout_margin="1dp"/>
    </LinearLayout>
</RelativeLayout>

