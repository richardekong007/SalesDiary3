<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical">

    <SearchView
        android:id="@+id/search"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#fff" />
    <TextView
        android:id="@+id/textlab1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="PRODUCT"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textlab5"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textlab1"
        android:padding="5dp"
        android:text="IMAGE"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textlab2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textlab5"
        android:padding="5dp"
        android:text="PRICE"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textlab3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textlab2"
        android:padding="5dp"
        android:text="STOCK"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/listHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textlab3"
        android:layout_marginTop="5dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textlab3"
            android:layout_margin="1dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>
</RelativeLayout>

